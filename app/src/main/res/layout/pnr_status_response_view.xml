<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="PNR Number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/pnr"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Date Of Journey"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/doj"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Total Passengers"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/total_passengers"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Reservation From"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/from_station"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Train upto"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/to_station"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:gravity="center"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Boarding Point"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/boarding_point"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Reservation Upto"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/reservation_upto"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Train"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/train"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Journey Class"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/journey_class"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWrite2"
                android:textSize="12dp" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Passenger List"
            android:textColor="@color/colorWrite1"
            android:textSize="18dp" />
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ashish.com.myapp1.NonScrollListView
            android:id="@+id/passengerlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#c2a0ef"
            android:dividerHeight="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/whatsapp" />

    </LinearLayout>
</LinearLayout>